@using ConfectionaryContracts.ViewModels
@model List<WarehouseViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Склады</h1>
</div>
<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
        <p>
            <a asp-action="CreateOrUpdate">Создать склад</a>
            <a asp-action="Replenish">Пополнить склад</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Номер
                    </th>
                    <th>
                        Наименование
                    </th>
                    <th>
                        Заведующий
                    </th>
                    <th>
                        Дата создания
                    </th>
                    <th/>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manager)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreate)
                    </td>
                    <td>
                        <a style="color: #32CD32;" asp-action="CreateOrUpdate" asp-route-id="@item.Id">Изменить</a> |
                        <a style="color: #B22222;" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>
