@{
    ViewData["Title"] = "Delete";
}

<h3>Вы действительно хотите удалить эту запись?</h3>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a asp-action="Index">Отмена</a>
        </form>
    </div>
</div>